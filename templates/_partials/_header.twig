
{% set navigation = craft.entries().section('navigation').all() %}

<nav class="navbar navbar-expand-lg">
	<div class="container">
        <a class="navbar-brand" href="{{ siteUrl }}" aria-label="Home">
            <img src="{{ alias('@assetsUrl') }}/img/logo.svg" width="132" height="40" alt="{{ siteName }}">
        </a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
			<div class="navbar-nav ms-auto">
            {# These are dropdowns, and are set up in the control panel as such: there's no link behind these pages, but they are solely there to open the dropdown on hover #}
                {% for nav in navigation %}
				    <a class="nav-link{{ active }}" aria-current="page" href="#">{{ nav.title }}</a>
				{% endfor %}
			</div>
		</div>
	</div>
</nav>